@using HutechAndYou.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DonDatHang>

@{
    ViewBag.Title = "QuanLyDonHang";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<div class="carousel-inner">
    <div class="item active">
        <img src="~/Content/images/banner3.png" style="width:100%; height: 150px" alt="First slide">
        <div class="carousel-caption">
            <h1>GIỎ HÀNG CỦA BẠN</h1>
        </div>
    </div>
</div>

<section class="about-block">
    <div class="container">
        <div class="row">
            <div class="list-group-item">
                <table class="table center-aligned-table">
                    <thead>
                        <tr>
                            <th style="line-height:18px;" class="border-bottom-0">Mã đơn hàng</th>
                            <th style="line-height:18px;" class="border-bottom-0">Tên khách hàng</th>
                            <th style="line-height:18px;" class="border-bottom-0">Tổng tiền</th>
                            <th style="line-height:18px;" class="border-bottom-0">Ngày đặt</th>
                            <th style="line-height:18px;" class="border-bottom-0">Ngày giao</th>
                            <th style="line-height:18px;" class="border-bottom-0">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var DonDatHang in Model)
                        {
                            <tr>
                                <td style="line-height:18px;">@DonDatHang.MaDH</td>
                                <td style="line-height:18px;">@DonDatHang.KhachHang.HoTen</td>
                                <td style="line-height:18px;">@string.Format("{0:0,0}", DonDatHang.DaThanhToan) VNĐ</td>
                                <td style="line-height:18px;">@DonDatHang.NgayDat</td>
                                <td style="line-height:18px;">@DonDatHang.NgayGiao</td>
                                <td style="line-height:18px;"><a href="@Url.Action("ChiTietDonHang", "GioHang",new {id = DonDatHang.MaDH })">Chi Tiết</a> - <a href="@Url.Action("xoasanpham","GioHang", new { id = DonDatHang.MaDH })">Xóa</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="clearfix"></div>
                <table class="table center-aligned-table">
                    <thead>
                        <tr>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <td style=" padding: 10px; float: left; font-size: 20px;">
                                @Html.PagedListPager(Model, page => Url.Action("QuanLyDonHang", new { page = page }))
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</section>
<div class="clearfix"></div>