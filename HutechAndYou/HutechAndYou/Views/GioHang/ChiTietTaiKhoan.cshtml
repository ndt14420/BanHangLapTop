@using HutechAndYou.Models
@model List<GioHang>
@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <div class="login100-form validate-form flex-sb flex-w">
                    <span style="color:red" class="login100-form-title p-b-32">
                        THÔNG TIN TÀI KHOẢN
                    </span>

                    <span class="txt1 p-b-11">
                        Tên khách hàng
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="hoten" value="@ViewBag.ht">
                        <span class="focus-input100"></span>
                    </div>
                    <span class="txt1 p-b-11">
                        Số điện thoại
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        @ViewBag.sdt
                        <span class="focus-input100"></span>
                    </div>
                    <span class="txt1 p-b-11">
                        Email
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        @ViewBag.em
                        <span class="focus-input100"></span>
                    </div>
                    <span class="txt1 p-b-11">
                        Địa chỉ
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="diachi" value="@ViewBag.dc2">
                        <span class="focus-input100"></span>
                    </div>
                    <span class="txt1 p-b-11">
                        Số dư tài khoản
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        Số tiền còn lại: <h style="color:red">@string.Format("{0:0,0}", @ViewBag.DT) VNĐ</h>
                        <span class="focus-input100"></span>
                    </div>
                    <div class="flex-sb-m w-full p-b-48">
                        <div style="color:red" class="contact100-form-checkbox">
                            @ViewData["Loi"]
                        </div>

                        <div>
                            <a href="@Url.Action("Index","Login")" class="txt3">
                                Đăng nhập?
                            </a>
                        </div>
                    </div>

                    <div style="width:50%;float:left" class="container-login100-form-btn">
                        <input type="submit" style="float:right;" class="login100-form-btn" value="LƯU" />
                    </div>
                    <div class="login100-form-btn" style="width:100px;float:right">
                        <a href="@Url.Action("Index","Home")">
                            <h6 style="color:white">TRANG CHỦ</h6>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}