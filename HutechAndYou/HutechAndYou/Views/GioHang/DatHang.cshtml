@using HutechAndYou.Models
@model List<GioHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <div class="login100-form validate-form flex-sb flex-w">
                    <span style="color:red" class="login100-form-title p-b-32">
                        XÁC nhận đơn hàng
                    </span>

                    <span class="txt1 p-b-11">
                        Tên khách hàng
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        @kh.HoTen
                        <span class="focus-input100"></span>
                    </div>
                    <span class="txt1 p-b-11">
                        Số điện thoại
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        @kh.DienThoai
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Ngày đặt hàng
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        @DateTime.Now.ToShortDateString()
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Thời gian nhận hàng mông muốn
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                        <input type="date" name="ngaygiao">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Địa chỉ
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                        @kh.DiaChi
                        <span class="focus-input100"></span>
                    </div>
                    <span class="txt1 p-b-11">
                        Thông tin đơn hàng
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        Số dư:           <h style="color:red">@string.Format("{0:0,0}", @ViewBag.DT) VNĐ</h>
                        <span class="focus-input100"></span>
                        <br />
                        Thanh toán:      <h style="color:red">@string.Format("{0:0,0}", @ViewBag.TongTien) VNĐ</h>
                        <span class="focus-input100"></span>
                        <br />
                        Số tiền còn lại: <h style="color:red">@string.Format("{0:0,0}", @ViewBag.SoDu) VNĐ</h>
                        <span class="focus-input100"></span>
                    </div>
                    <div class="flex-sb-m w-full p-b-48">
                        <div style="color:red" class="contact100-form-checkbox">
                            @ViewData["Loi"]
                        </div>

                        <div>
                            <a href="@Url.Action("Index","Login")" class="txt3">
                                Đăng nhập?
                            </a>
                        </div>
                    </div>

                    <div style="width:50%;float:left" class="container-login100-form-btn">
                        <input type="submit" style="float:right;" class="login100-form-btn" value="Đặt Hàng" />
                    </div>
                    <div class="login100-form-btn" style="width:100px;float:right">
                        <a href="@Url.Action("GioHangCuaBan","GioHang")">
                            <h6 style="color:white">GIỎ HÀNG</h6>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}