@model HutechAndYou.Models.SanPham

@{
    ViewBag.Title = "ThemSanPham";
    Layout = "~/Views/Shared/_LayoutAdminAdd.cshtml";
}

@using (Html.BeginForm("ThemSanPham", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <form class="login100-form validate-form flex-sb flex-w">
                    <span class="login100-form-title p-b-32">
                        THÊM SẢN PHẨM
                    </span>

                    <span class="txt1 p-b-11">
                        Tên tài khoản
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="tensp">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Hãng sản xuất
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        @Html.DropDownList("MaHang")
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Ảnh minh họa
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input type="file" name="fileUpload">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Ảnh minh họa 2
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input type="file" name="fileUpload1">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Ảnh minh họa 3
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input type="file" name="fileUpload2">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Ảnh minh họa 4
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input type="file" name="fileUpload3">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Ngày nhập
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="date" name="ngaynhap">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Số lượng
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="number" name="soluong">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Giá bán
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="number" name="giaban">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        CPU
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="cpu">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Loại CPU
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="loaicpu">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Ram
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="ram">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Crad đồ họa
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="card">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Kích thước màn hình
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="manhinh">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Ổ cứng
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="ocung">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Nội dung
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="noidung">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="flex-sb-m w-full p-b-48">
                        <div style="color:red" class="contact100-form-checkbox">
                            @ViewData["Loi"]
                        </div>

                        <div>
                            <a href="@Url.Action("Index","Admin")" class="txt3">
                                Admin?
                            </a>
                        </div>
                    </div>

                    <div style="width:50%;float:left" class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            TẠO MỚI
                        </button>
                    </div>
                    <div class="login100-form-btn" style="width:100px;float:right">
                        <a href="@Url.Action("SanPham","Admin")">
                            <h6 style="color:white">SẢN PHẨM</h6>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


