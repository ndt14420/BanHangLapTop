@model HutechAndYou.Models.SanPham

@{
    ViewBag.Title = "XoaSanPham";
    Layout = "~/Views/Shared/_LayoutAdminAdd.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <div class="login100-form validate-form flex-sb flex-w">
                <span class="login100-form-title p-b-32" style="color:red">
                    Xóa sản phẩm
                </span>

                <span class="txt1 p-b-11" style="color:red">
                    Bạn có chắc chắn muốn xóa sản phẩm này không ?
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    @Model.TenSP
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <img src="~/Hinh Anh/SanPham/@Model.AnhMH" style="width:100%" alt="First slide">
                    <span class="focus-input100"></span>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div  class="container-login100-form-btn">
                        <input type="submit" value="Xóa" class="login100-form-btn" />
                    </div>                    
                }
                    <div class="login100-form-btn" style="width:100px;">
                        <a href="@Url.Action("SanPham","Admin")">
                            <h6 style="color:white">SẢN PHẨM</h6>
                        </a>
                    </div>
            </div>                     
        </div>
    </div>
</div>
