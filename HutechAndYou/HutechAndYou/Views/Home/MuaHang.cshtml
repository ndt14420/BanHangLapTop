@using HutechAndYou.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<div class="carousel-inner">
    <div class="item active">
        <img src="~/Content/images/banner4.png" style="width:100%; height: 150px" alt="First slide">
        <div class="carousel-caption">
            <h1>MUA HÀNG</h1>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<section class="about-block">
    <div class="container">
        <div class="row">
            <div class="list-group-item">
                <table class="table center-aligned-table">
                    <thead>
                        <tr>
                            <th class="border-bottom-0"></th>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <th class="border-bottom-0">
                                <div class="dropdown">
                                    <a data-toggle="dropdown" href="">Giá bán<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("DEN10","Home")">Dưới 10tr</a></li>
                                        <li><a href="@Url.Action("DEN15","Home")">10-15tr</a></li>
                                        <li><a href="@Url.Action("DEN20","Home")">15-20tr</a></li>
                                        <li><a href="@Url.Action("DEN25","Home")">20-25tr</a></li>
                                        <li><a href="@Url.Action("DEN30","Home")">25-30tr</a></li>
                                        <li><a href="@Url.Action("TREN30","Home")">Trên 30tr</a></li>
                                    </ul>
                                </div>
                            </th>
                            <th class="border-bottom-0">
                                <div class="dropdown">
                                    <a data-toggle="dropdown" href="">Hãng sản xuất<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.Action("HangSanXuat", "Home")</li>
                                    </ul>
                                </div>
                            </th>
                        </tr>
                    </thead>
                </table>              
            </div>
        </div>
    </div>
</section>
            <div class="container">
                <div class="pager">
                    @Html.PagedListPager(Model, page => Url.Action("MuaHang", new { page = page }))
                </div>
                <div class="Lap">
                    <ul>
                        @foreach (var SanPham in Model)
                        {
                            <li>
                                <img class="Lap-Anh" alt="@SanPham.TenSP" src="~/Hinh Anh/SanPham/@SanPham.AnhMH" width="100%" />
                                <div class="Lap-TenLap">
                                    @SanPham.TenSP
                                </div>
                                <div class="Lap-ThongTin">
                                    <span style="font-size:14px"><span style="color:red">CPU: </span>@SanPham.CPU @SanPham.LoaiCpu</span>
                                    <p><span style="font-size:14px"><span style="color:red">RAM: </span>@SanPham.Ram</span></p>
                                    <p><span style="font-size:14px"><span style="color:red">CRAD: </span>@SanPham.CPU @SanPham.Crad</span></p>
                                    <p><span style="font-size:14px"><span style="color:red">SỐ LƯỢNG: </span>@SanPham.Soluongton cái</span></p>

                                </div>
                                <a href="@Url.Action("ChiTiet", "Home",new {id = SanPham.MaSP })">
                                    <div class="Lap-Gia" style="float:right">
                                        <input type="submit" class="submit-btn" value="@string.Format("{0:0,0}", SanPham.GiaBan) VNĐ">
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="clearfix"></div>
                <div class="pager">
                    @Html.PagedListPager(Model, page => Url.Action("MuaHang", new { page = page }))
                </div>
            </div>
            <div class="clearfix"></div>
